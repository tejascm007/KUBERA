# ============================================================================
# KUBERA BACKEND - ENVIRONMENT VARIABLES
# ============================================================================

# Application
APP_NAME=KUBERA
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/kubera
DB_POOL_MIN_SIZE=10
DB_POOL_MAX_SIZE=50
DB_TIMEOUT=30

# JWT & Security
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30
PASSWORD_MIN_LENGTH=8

# OTP
OTP_LENGTH=6
OTP_EXPIRE_MINUTES=10
OTP_MAX_ATTEMPTS=5

# Rate Limiting (Defaults)
RATE_LIMIT_BURST=10
RATE_LIMIT_PER_CHAT=50
RATE_LIMIT_HOURLY=150
RATE_LIMIT_DAILY=1000

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@kubera.com
SMTP_FROM_NAME=KUBERA
SMTP_TLS=True

# Admin
ADMIN_EMAIL=admin@kubera.com
ADMIN_PHONE=+919876543210
ADMIN_OTP_EXPIRE_MINUTES=5

# API Keys
OPENAI_API_KEY=sk-your-openai-api-key
FINNHUB_API_KEY=your-finnhub-key
NEWS_API_KEY=your-newsapi-key
ALPHA_VANTAGE_API_KEY=your-alphavantage-key

# MCP Servers (adjust paths for your system)
MCP_SERVER_1_PATH=C:/path/to/mcp_servers/server1_financial_data.py
MCP_SERVER_2_PATH=C:/path/to/mcp_servers/server2_market_technical.py
MCP_SERVER_3_PATH=C:/path/to/mcp_servers/server3_governance_compliance.py
MCP_SERVER_4_PATH=C:/path/to/mcp_servers/server4_news_sentiment.py
MCP_SERVER_5_PATH=C:/path/to/mcp_servers/server5_visualization.py

# Storage (Supabase - Optional)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-key
SUPABASE_BUCKET=kubera-charts

# Application Settings
TIMEZONE=Asia/Kolkata
CURRENCY=INR
DEFAULT_EXCHANGE=NSE

# CORS (adjust for your frontend)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_MESSAGE_MAX_SIZE=1048576

# Portfolio
PORTFOLIO_PRICE_UPDATE_INTERVAL_MINUTES=30
PORTFOLIO_REPORT_DEFAULT_FREQUENCY=monthly
PORTFOLIO_REPORT_DEFAULT_TIME=09:00:00
PORTFOLIO_REPORT_DEFAULT_DAY=1

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
